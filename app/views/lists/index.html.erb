<h1 class="text-center my-4">All Lists</h1>

<div class="text-center mb-4">
  <%= link_to 'Create New List', new_list_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            <% if list.bookmarks.any? %>
              <ul class="list-unstyled">
                <% list.bookmarks.each do |bookmark| %>
                  <li>
                    <strong><%= bookmark.movie.title %></strong>: <%= bookmark.comment %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted">No movies added to this list yet.</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
